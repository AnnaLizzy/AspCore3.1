@page "/login/"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        setTimeout(function () {
            $('#msgAlert').fadeOut('slow');
        },2000);
    </script>
}
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <form class="login100-form validate-form" id="account" method="post">
                <span class="login100-form-title p-b-26">
                    Welcome
                </span>
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
                {
                    @foreach (var error in @ViewData.ModelState[string.Empty]?.Errors)
                    {
                        <div id="msgAlert" class="alert alert-danger alert-dismissible fade show" role="alert">
                            <span>@error.ErrorMessage</span>                      
                        </div>
                    }
                }
                 
                <div class="wrap-input100 validate-input" data-validate="Please enter ID">
                    <input class="input100 " asp-for="Input.Id">
                    <span class="focus-input100 " data-placeholder="ID"  ></span>
                    
                </div>
                <div class="wrap-input100 validate-input" data-validate="Please enter Password">
                    <span class="btn-show-pass">
                        <i class="zmdi zmdi-eye"></i>
                    </span>
                    <input class="input100 " asp-for="Input.Password">
                    <span class="focus-input100 text-danger" data-placeholder="Password"></span>
                
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>

                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>

                        <button class="login100-form-btn" type="submit">
                            Login
                        </button>

                    </div>
                </div>                
                <div class="text-center p-t-115">
                    <a class="txt1" asp-page="./ForgotPassword">                        
                        Forgot password?
                    </a>

                    <a class="txt2" href="404.html">
                        Contact Us
                    </a> 
                </div>
            </form>
        </div>
    </div>
</div>